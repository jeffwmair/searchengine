<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- Database connection settings -->
		<!-- http://stackoverflow.com/questions/3278148/what-mysql-driver-do-i-use-with-spring-hibernate -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/searchengine_test</property>
		<property name="connection.username">se_test_user</property>
		<property name="connection.password">se_test_user</property>
		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>
		<property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.timeout">1800</property>
		<property name="hibernate.c3p0.max_statements">50</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Disable the second-level cache  -->
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCachingRegionFactory</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">false</property>

		<!-- Drop and re-create the database schema on startup -->
		<property name="hbm2ddl.auto">create-drop</property>

		<mapping class="com.jwm.ir.persistence.Domain" />
		<mapping class="com.jwm.ir.persistence.Page" />
		<mapping class="com.jwm.ir.persistence.PageLink" />
		<mapping class="com.jwm.ir.persistence.PageTerm" />
		<mapping class="com.jwm.ir.persistence.PageSubmission" />
		<mapping class="com.jwm.ir.persistence.SummaryData" />
		<mapping class="com.jwm.ir.persistence.Term" />
		<mapping class="com.jwm.ir.persistence.ValidExtension" />
	</session-factory>

</hibernate-configuration>
